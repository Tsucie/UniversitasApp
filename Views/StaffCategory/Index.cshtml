@{
    ViewBag.Title = "Staff";
    ViewBag.Logo = "Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- .modal -->
<div class="modal fade" id="AddEditModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"></h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label for="sc_name" class="col-sm-2 control-label">Kategori</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control form-inputs" placeholder="Nama Kategori" id="sc_name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="sc_desc" class="col-sm-2 control-label">Deskripsi</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control form-inputs" placeholder="Deskripsi Kategori" id="sc_desc">
                    </div>
                </div>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Kembali</button>
        <button type="button" class="btn btn-success" id="btn-add-category">Tambah</button>
        <button type="button" class="btn btn-success" id="btn-edit-category">Edit</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<!-- Contet Header -->
<section class="content-header">
    <h1 class="card-text">
    Staff
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active" id="active-link"></li>
    </ol>
</section>
<!-- Kategori Staff Table Content -->
<section class="content" id="category-table">
    <div class="row">
        <div class="col-xs-12">
            <div class="box card-custom">
                <div class="box-header">
                    <h2 class="box-title"><b>Kategori Staff</b></h2>
                </div>
                <div class="box-body">
                    <div>
                        <label>
                            <a class="btn btn-sm btn-success card-btn" data-toggle="modal" data-target="#AddEditModal" id="Add-btn"><strong>Add Staff Kategori</strong></a>
                        </label>
                    </div>
                    <div class="dataTables_wrapper form-inline dt-bootstrap" id="example1_wrapper">
                        <div id="tbl-loading-1" class=""></div>
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <table id="tblStaff" class="table table-bordered table-striped table-hover">
                                    <thead class="bg-me">
                                        <tr>
                                            <th class="status-user col-md-1">#</th>
                                            <th>Kategori<i class="pull-right glyphicon glyphicon-sort-by-attributes"></i></th>
                                            <th>Deskripsi<i class="pull-right glyphicon glyphicon-sort-by-attributes"></i></th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Staff Table Content -->
<section class="content" id="staff-table">
    <div class="row">
        <div class="col-xs-12">
            <div class="box card-custom">
                <div class="box-header">
                    <h2 class="box-title"><b>Staff List</b></h2>
                </div>
                <div class="box-body">
                    <div>
                        <label>
                            <button class="btn btn-sm btn-success card-btn" id="add-staff-btn"><strong>Add Staff</strong></button>
                        </label>
                    </div>
                    <div class="dataTables_wrapper form-inline dt-bootstrap" id="example1_wrapper">
                        <div id="tbl-loading-2" class="lds-ripple"><div></div><div></div></div>
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <table id="tblStaff-detail" class="table table-bordered table-striped table-hover">
                                    <thead class="bg-me">
                                        <tr>
                                            <th>Photo</th>
                                            <th>Username<i class="pull-right glyphicon glyphicon-sort-by-attributes"></i></th>
                                            <th>Nama<i class="pull-right glyphicon glyphicon-sort-by-attributes"></i></th>
                                            <th>Kategori<i class="pull-right glyphicon glyphicon-sort-by-attributes"></i></th>
                                            <th>NIK<i class="pull-right glyphicon glyphicon-sort-by-attributes"></i></th>
                                            <th>Status<i class="pull-right glyphicon glyphicon-sort-by-attributes"></i></th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Form Content -->
<section hidden class="content container-fluid" id="form-content">
    <!-- Horizontal Form -->
    <div class="box box-info card-custom">
        <div class="box-header with-border">
            <h3 class="box-title" id="form-title"></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form id="form-stf" class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label for="u_username" class="col-sm-2 control-label">UserName</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control form-inputs" name="UserName" placeholder="UserName" id="u_username">
                        <div hidden id="username-alrt" class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span>
                            Username tidak boleh kosong!
                        </div>
                    </div>
                </div>
                <div class="form-group" id="password-field">
                    <label for="u_password" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control form-inputs" name="Password" placeholder="Password" id="u_password">
                        <div hidden id="password-alrt" class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span>
                            Password Tidak boleh kosong!
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-header with-border">
                <h3 class="box-title">Details</h3>
            </div>
            <div class="box-body" id="form-section">
                <div class="form-group">
                    <label for="stf_sc_id" class="col-sm-2 control-label">Kategori Staff</label>
                    <div class="col-sm-2">
                        <select class="form-control form-inputs" id="select-stfcategory"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_fullname" class="col-sm-2 control-label">Nama Lengkap</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-inputs" name="stf_fullname" placeholder="Nama Lengkap" id="stf_fullname">
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_nik" class="col-sm-2 control-label">Nomor Induk Karyawan</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-inputs" name="stf_nik" placeholder="NIK" id="stf_nik">
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_address" class="col-sm-2 control-label">Alamat</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-inputs" name="stf_address" placeholder="Alamat" id="stf_address">
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_province" class="col-sm-2 control-label">Provinsi</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-inputs" name="stf_province" placeholder="Provinsi" id="stf_province">
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_city" class="col-sm-2 control-label">Kota</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-inputs" name="stf_city" placeholder="Kota" id="stf_city">
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_birthplace" class="col-sm-2 control-label">Tempat Lahir</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-inputs" name="stf_birthplace" placeholder="Tempat Lahir" id="stf_birthplace">
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_birthdate" class="col-sm-2 control-label">Tanggal Lahir</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control form-inputs" name="stf_birthdate" placeholder="Tanggal Lahir" id="stf_birthdate">
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_gender" class="col-sm-2 control-label">Jenis Kelamin</label>
                    <div class="col-sm-2">
                        <select class="form-control form-inputs" id="select-gender">
                            <option value="Laki-laki">Laki-laki</option>
                            <option value="Perempuan">Perempuan</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_religion" class="col-sm-2 control-label">Agama</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-inputs" name="stf_religion" placeholder="Agama" id="stf_religion">
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_state" class="col-sm-2 control-label">Kewarganegaraan</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-inputs" name="stf_state" placeholder="Kewarganegaraan" id="stf_state">
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-inputs" name="stf_email" placeholder="Email" id="stf_email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_stat" class="col-sm-2 control-label">Status Karyawan</label>
                    <div class="col-sm-2">
                        <select class="form-control form-inputs" id="select-status">
                            <option value="1">Aktif</option>
                            <option value="0">Tidak Aktif</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="stf_contact" class="col-sm-2 control-label">Nomor Telpon</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-inputs" name="stf_contact" placeholder="Nomor Telpon" id="stf_contact">
                    </div>
                </div>
            </div>
            <div class="box-footer card-custom">
                <button class="btn btn-default" role="button" id="btn-cancel-stf">Cancel</button>
                <a><button type="button" class="btn btn-success pull-right" id="btn-create-stf">Create</button></a>
                <a><button type="button" class="btn btn-success pull-right" id="btn-edit-stf">Edit</button></a>
            </div>
            <!-- /.box-footer -->
        </form>
        <!-- /form end -->
    </div>
    <!-- /.box -->
</section>

@section scripts {
    <script src="~/Scripts/StaffCategory.js" type="text/javascript"></script>
    <script src="~/Scripts/Staff.js" type="text/javascript"></script>
}